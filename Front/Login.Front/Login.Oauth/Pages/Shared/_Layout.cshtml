<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Login.Oauth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Login.Oauth.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Login.Oauth</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Exercises" asp-page="/Index">Exercises</a>
                        </li>


                        <partial name="_LoginPartial" />
                    </ul>
                </div>
                

            </div>
        </nav>

        


    </header>

    <div class="row">
        <div class="col-2">            
                    <nav class="navbar">
                        <ul>
                            <li class="li_navbar">
                             <img src="img/logo_pp2.png" alt="Logo FitZone" class="img_logo"/>
                            </li>
                            <li class="li_navbar">
                                <span class="material-symbols-outlined">groups</span>
                            <a class="nav_link" asp-area="Socios" asp-page="/Crear">Alta</a>
                            </li>
                            <li class="li_navbar">
                                <span class="material-symbols-outlined">sports_gymnastics</span>
                                <a class="nav_link text-white" href="#">Clases</a>
                            </li>
                            <li class="li_navbar">
                                <span class="material-symbols-outlined">emoji_events</span>
                                <a class="nav_link text-white" href="#">Instructor</a>
                            </li>
                            <li class="li_navbar">
                        <span class="material-symbols-outlined">payments</span>
                                <a class="nav_link text-white" href="#">Cobros</a>
                            </li>
                            <li class="li_navbar">
                                <span class="material-symbols-outlined">fitness_center</span>
                                <a class="nav_link text-white" href="#">Equipamiento</a>
                            </li>
                            <li class="li_navbar">
                                <span class="material-symbols-outlined">notifications</span>
                                <a class="nav_link text-white" href="#">Notificaciones</a>
                            </li>
                            <li class="li_navbar">
                                <span class="material-symbols-outlined">admin_panel_settings</span>
                                <a class="nav_link text-white" href="#">Administrador</a>
                            </li>
                            <li class="li_navbar">
                                <span class="material-symbols-outlined">settings</span>
                                <a class="nav_link text-white" href="#">Configuración</a>
                            </li>
                            <li class="li_navbar">
                                <span class="material-symbols-outlined">bar_chart_4_bars</span>
                                <a class="nav_link text-white" href="#">Dashboard</a>
                            </li>
                        </ul>
                    </nav>
          </div>
            <div class="col-6">
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>

    </div>



    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Login.Oauth - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script> *@


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>